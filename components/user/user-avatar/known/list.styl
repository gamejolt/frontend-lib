@require '~styles/variables'
@require '~styles-lib/mixins'

$-size = 40px
$-spacing = 3px

.-list
	position: relative
	flex: 1
	display: flex
	flex-wrap: wrap
	padding-top: 4px
	padding-bottom: 4px

.-user
	flex: none
	width: $-size
	height: $-size
	margin: 0 $-spacing $-spacing

.-avatar
	img-circle()
	theme-prop('background-color', 'bg-subtle')
	pressy()
	flex: none
	width: $-size
	height: $-size
	margin-right: $grid-gutter-width-xs * 0.5

	@media $media-sm-up
		margin-right: $grid-gutter-width * 0.5
