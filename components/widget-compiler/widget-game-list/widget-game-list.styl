@require '~styles/variables'

.-game-list
	text-align: center

	@media $media-sm-up
		margin-left: -(20px)
		margin-right: -(20px)

.-game
	display: inline-block
	vertical-align: top
	text-align: left
	width: 100%
	padding-bottom: $grid-gutter-width-xs

	@media $media-sm
		width: (100% / 2)
		padding: 0 20px 40px 20px

	@media $media-md-up
		width: (100% / 3)
		padding: 0 20px 40px 20px

.-title
	margin: 10px 0 0 0
	font-weight: bold
	font-size: 1.1em
