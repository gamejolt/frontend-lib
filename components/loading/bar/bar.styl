@require '~styles/variables'
@require '~styles-lib/mixins'

.loading-bar
	position: fixed
	top: 0
	left: 0
	right: 0
	height: 3px
	pointer-events: none
	z-index: $zindex-loading-bar

	&-bar
		theme-prop('background-color', 'highlight')
		height: 3px
		transition: width 300ms $strong-ease-out
		will-change: width
