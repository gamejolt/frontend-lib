.ad-leaderboard
	text-align: center

	.ad-inner
		margin: 0 auto

		// Specifically to get Google Ads to center correctly.
		> div > div
			margin: 0 auto

	.text-left &
		text-align: left

		.ad-inner
			&
			> div > div
				margin: 0

.ad-inner
	background-color: $gray-lightest

.ad-leaderboard .ad-inner
	width: 728px
	height: 90px

.ad-rectangle .ad-inner
	width: 300px
	height: 250px

.ad-skyscraper .ad-inner
	width: 160px
	height: 600px

.ad-section
	@extend .section
	padding-top: ($grid-gutter-width / 4)
	padding-bottom: ($grid-gutter-width / 4)
	background-color: $gray-lightest

	&.dark
		background-color: $gray-dark
