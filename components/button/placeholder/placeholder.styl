@require '~styles/variables'
@require '~styles-lib/mixins'

.button-placeholder
	rounded-corners()
	theme-prop('background-color', 'bg-offset')
	display: inline-block
	height: $button-md-line-height
	vertical-align: middle
	width: 75px

	&.sparse
		width: $button-md-line-height

	&.circle
		border-radius: 50%

	&.block
		display: block
		width: 100%
