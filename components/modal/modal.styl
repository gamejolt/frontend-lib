@require '~styles/variables'
@require '~styles-lib/mixins'

.-container
	position: fixed
	overflow: hidden
	top: 0
	right: 0
	bottom: 0
	left: 0
	-webkit-overflow-scrolling: touch

	// Animation stuff.
	// Tells vue that we want to animate for this long, basically.
	&.v-enter-active, &.v-leave-active
		transition-duration: 300ms

		.modal-content
			transition: transform 300ms $strong-ease-out, opacity 300ms

	&.v-enter, &.v-leave-to
		.modal-content
			opacity: 0
			// On xs we do plop down animation.
			// On sm-up we do a expand open animation.
			transform: scale3d(1.2, 1.2, 1.2)

			@media $media-sm-up
				transform: scale3d(0.8, 0.8, 0.8)

	>>> .backdrop
		z-index: 1

// Container that the modal scrolls within
.modal
	overflow: auto
	overflow-y: scroll
	position: absolute
	top: 0
	right: 0
	bottom: 0
	left: 0
	z-index: 2

	.modal-content
		opacity: 1
		transform: none

.modal-content
	content-prop('background-color', 'bg')
	content-prop('color', 'fg')
	position: relative
	background-clip: padding-box
	outline: 0 // Remove focus outline from opened modal
	box-shadow: 0 5px 15px rgba($black, 0.5)

	// Full screen on xs
	@media $media-xs
		min-height: 100vh

	@media $media-sm-up
		rounded-corners()
		margin: 30px auto
		margin-top: 100px

@media $media-sm-up
	.modal-sm
		.modal-content
			width: 600px

@media $media-md-up
	.modal-content
		width: $container-md

.modal-full
	content-prop('background-color', 'bg')
	overflow: hidden

	.modal-content
		width: 100%
		height: 100%
		margin: 0
		box-shadow: none
		border-radius: 0
		overflow: auto
		overflow-y: scroll
		background-color: transparent
