@require '~styles/variables'
@require '~styles-lib/mixins'

.theme-bubble
	position: relative
	padding-top: 100%
	height: 0
	overflow: hidden
	border-radius: 50%

>>> a .theme-bubble
	cursor: pointer

	&:hover
		box-shadow: 0 0 0 2px var(--theme-bg), 0 0 0 4px var(--theme-fg)

.-active
	box-shadow: 0 0 0 2px var(--theme-bg), 0 0 0 4px var(--theme-link)

.-highlight, .-backlight
	position: absolute
	width: 150%
	height: 150%

.-highlight
	top: 0
	left: 0
	z-index: 1

.-backlight
	bottom: -75%
	right: -75%
	transform: rotateZ(45deg)
	z-index: 2
