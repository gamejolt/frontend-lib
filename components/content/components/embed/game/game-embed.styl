@require '~styles/variables'
@require '~styles-lib/mixins'

.game-container
	max-width: 400px
	min-height: 100px
	margin-bottom: 0
	position: relative
	overflow: hidden

.-inner
	display: flex
	flex-direction: row
	z-index: 3
	position: relative

.-thumbnail
	width: 120px;
	flex-shrink: 0
	box-shadow: 0px 0px 8px 3px rgba(0, 0, 0, 0.3)

.-title
	margin-left: 20px;

.header-background
	top: 0
	left: 0
	position: absolute
	display: block
	opacity: 0.7
	width: 100%
	height: 100px
	z-index: 1
	overflow: hidden

.header-background-img
	width: 100%
	height: 100%

.header-background-fade
	position: absolute
	display: block
	top: 0
	left: 0
	width: 100%
	height: 100px
	z-index: 2
	background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, var(--theme-darkest) 90%)

.content
	margin-top: 20px
