.media-upload
	padding: 10px

.-placeholder
	max-width: 380px
	max-height: 260px
	filter: grayscale(80%) contrast(50%)

.-container
	max-width: 400px
	max-height: 280px
	display: flex
	justify-content: center
	align-items: center
	position: relative

.-overlay
	position: absolute
	width: 100%
	height: 100%
	background-color: rgba(100, 100, 100, 0.5)

.-inner
	position: absolute
	left: 50%
	white-space: normal !important;
