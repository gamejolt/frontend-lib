@require '~styles/variables'

>>> .game-play-modal-open
	overflow: hidden

.game-play-modal
	position: fixed
	top: 0
	right: 0
	bottom: 0
	left: 0
	overflow: auto
	overflow-y: scroll
	z-index: $zindex-modal
	background-color: transparent

	&-backdrop
		position: fixed
		top: 0
		left: 0
		right: 0
		bottom: 0
		z-index: ($zindex-modal-background - 10)
		background-color: $gray-darkest

	&-header-controls
		margin-top: -2px  // Remove the top border from buttons.
		padding-bottom: ($grid-gutter-width-xs / 2)
		text-align: center

		@media $media-md-up
			padding-right: ($grid-gutter-width-xs / 2)
			text-align: right

	&-body
		position: absolute
		top: 60px
		right: 0
		bottom: 60px
		left: 0

	// This is the iframe to gameserver.
	&-embed
		width: 100%
		height: 100%
