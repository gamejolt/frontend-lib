@require '~styles/variables'
@require '~styles-lib/mixins'

.media-bar-item
	rounded-corners()
	theme-prop('background-color', 'darkest')
	position: relative
	display: inline-block
	vertical-align: top
	// Spacing through margins.
	margin-right: 15px

	&:first-child
		margin-left: 15px

	@media $media-sm-up
		margin-right: 20px

		&:first-child
			margin-left: 20px

	img
		rounded-corners()
		z-index: 0

.-play
	@extend $play-button-overlay, $play-button-overlay.small

.-wrapper
	display: block

	&:hover
		.play-button-overlay
			background-color: rgba($black, 0.85)

			&, .jolticon
				theme-prop('color', 'highlight')
				cursor: zoom-in

	// Can't zoom on xs.
	&, .jolticon
		cursor: default

	@media $media-sm-up
		&, .jolticon
			cursor: zoom-in

	// For "desktop" set up some hover effects and what not.
	// Turned off the transitions because they were causing scroll lag when
	// the mouse went over and away while scrolling.
	@media $media-md-up
		&::before, &::after
			overlay-img()
			opacity: 0
			z-index: 1

		&::before
			background-image: linear-gradient(to bottom right, rgba($gj-pink, 0.1) 0, rgba($gj-pink, 0) 30%)

		&::after
			background-image: linear-gradient(to bottom right, rgba($gj-blue, 0) 70%, rgba($gj-blue, 0.1) 100%)

		.media-bar:hover &
			opacity: 0.8

			&:hover
				opacity: 1

				&::before, &::after
					opacity: 1
