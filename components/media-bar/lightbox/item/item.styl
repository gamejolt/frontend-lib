@require '~styles/variables'

.media-bar-lightbox-item
	display: inline-block
	width: 100%
	height: 100%
	// Gotta allow some room on left/right for the next/prev buttons.
	padding: 0 110px
	vertical-align: top

// Browsers will allow you to drag the image somewhere to paste the URL.
// Turn that off since we want to enable dragging to switch images.
img
	pointer-events: none

.-inner
	display: flex
	width: 100%
	height: 100%
	flex-flow: column nowrap
	justify-content: center
	align-content: center
	align-items: center

.-embed
	flex: 0 0 auto
	width: 100%
	position: relative

	>>>
		img, iframe
			display: block
			margin: 0 auto
			border-radius: $border-radius-base

.-caption
	flex: 0 0 auto
	padding-top: $font-size-base
	text-align: center
	color: $white
	max-width: 900px
	white-space: normal

	h4
		margin-top: 0
		color: $white
		font-weight: 300
