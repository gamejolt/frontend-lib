@require '~styles/variables'

.growl
	position: relative

.growl-close
	position: absolute
	display: block
	top: 0
	right: 0
	width: 40px
	height: @width
	line-height: @height
	color: $white
	text-align: center
	z-index: 2

	&:hover
		color: var(--theme-pink)
		background-color: $gray-darkest

		@media $media-sm-up
			border-top-right-radius: $border-radius-base

.growl-inner
	padding: 25px 35px
	margin-top: $growl-spacing
	color: $white
	user-select: none
	will-change: background-color, opacity, transform

	@media $media-sm-up
		border-top-right-radius: $border-radius-base
		border-bottom-right-radius: $border-radius-base

	// Transition on mouse out, fade it back in to full opacity.
	transition: background-color 750ms

	&:hover
		// Immediately switch to slightly transparent on hover.
		// We set the background color alpha in the different message types below.
		transition: none

.growl-content
	max-height: 200px
	overflow-y: hidden

/**
 * Clickable growl.
 */
.growl-clickable
	&:hover
		cursor: pointer

/**
 * Growl icons.
 */
.growl-icon
	float: left
	width: 45px
	height: 45px

	> img
		display: block

.growl-has-icon .growl-content
	margin-left: 60px

/**
 * Sticky growl.
 */
.growl-sticky, .growl-pinned
	border-right: 5px solid $gray-darker
	border-left: 5px solid $gray-darker

	@media $media-sm-up
		border-left: none

/**
 * Success growl.
 */
.growl-type-success
	.growl-inner
		background-color: var(--theme-dark-green)

		&:hover
			background-color: rgba($gj-dark-green, 0.85)

/**
 * Error growl.
 */
.growl-type-error
	.growl-inner
		background-color: var(--theme-pink)

		&:hover
			background-color: rgba($gj-pink, 0.85)

/**
 * Info growl.
 */
.growl-type-info
	.growl-inner
		background-color: $gray-darker

		&:hover
			background-color: rgba($gray-darker, 0.85)
