@require '~styles/variables'

.growl-inner
	h4
		margin: 0
		font-weight: 300

	p
		margin-bottom: 9px
		font-size: $font-size-small

	a
		color: $white
		text-decoration: underline

	.progress
		margin-bottom: 9px

	p:last-child, .progress:last-child
		margin-bottom: 0

.growl-type-success .growl-inner
	h4
		color: var(--theme-green)

.growl-type-error .growl-inner
	h4
		color: var(--theme-green)

.growl-type-info .growl-inner
	h4
		color: var(--theme-green)
