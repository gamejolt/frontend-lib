@require '~styles/variables'
@require '~styles-lib/mixins'

$overlay-scrollbar-width ?= 7px
$overlay-scrollbar-padding ?= 2px
$overlay-scrollbar-padding-horizontal ?= 5px
$overlay-scrollbar-border-radius ?= 0

@media $media-sm-up
	.overlay-scrollbar
		&::-webkit-scrollbar
			width: $overlay-scrollbar-width + ($overlay-scrollbar-padding * 2)
			height: $overlay-scrollbar-width + ($overlay-scrollbar-padding-horizontal * 2)
			background-color: rgba(0, 0, 0, 0)

		&::-webkit-scrollbar-thumb:vertical, &::-webkit-scrollbar-thumb:horizontal
			theme-prop('background-color', 'gray')
			border-radius: $overlay-scrollbar-border-radius
			background-clip: padding-box
			border: $overlay-scrollbar-padding solid rgba(0, 0, 0, 0)
			border-radius: $overlay-scrollbar-width + ($overlay-scrollbar-padding * 2)

		&::-webkit-scrollbar-thumb:vertical
			min-height: 30px

		&::-webkit-scrollbar-thumb:horizontal
			border-width: $overlay-scrollbar-padding-horizontal
			min-width: 30px

		&, &:hover
			&::-webkit-scrollbar-thumb:vertical, &::-webkit-scrollbar-thumb:horizontal
				&:hover
					theme-prop('background-color', 'lighter')

		&:hover
			&::-webkit-scrollbar-thumb:vertical, &::-webkit-scrollbar-thumb:horizontal
				theme-prop('background-color', 'light')
