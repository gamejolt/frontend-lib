.hljs-emphasis
	font-style: italic

.hljs-strong
	font-weight: bold

.hljs-comment, .hljs-quote
	color: $gray-light

.hljs-variable, .hljs-template-variable, .hljs-meta, .hljs-built_in, .hljs-builtin-name, .hljs-literal, .hljs-symbol, .hljs-bullet, .hljs-link, .hljs-keyword, .hljs-selector-tag, .hljs-addition, .hljs-section, .hljs-name, .hljs-selector-id, .hljs-selector-class, .hljs-type
	color: $gj-green

.hljs-tag, .hljs-tag .hljs-name
	color: $gj-blue

.hljs-attr
	theme-prop('background-color', 'bg-offset')

.hljs-string, .hljs-regexp
	color: $gray-lighter

.hljs-attribute
	font-weight: bold

.hljs-deletion
	color: $gj-pink
