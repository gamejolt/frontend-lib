$gj-font-lib = '../../components/fonts/';

font-url( font-url, variant )
	src: url( $gj-font-lib + font-url + '/' + variant + '/' + font-url + '.eot' )
	src: url( $gj-font-lib + font-url + '/' + variant + '/' + font-url + '.eot#iefix' ) format('embedded-opentype'),
	url( $gj-font-lib + font-url + '/' + variant + '/' + font-url + '.woff2' ) format('woff2'),
	url( $gj-font-lib + font-url + '/' + variant + '/' + font-url + '.woff' ) format('woff'),
	url( $gj-font-lib + font-url + '/' + variant + '/' + font-url + '.ttf' ) format('truetype');

/**
 * Lato
 */
@font-face
	font-family: 'Lato'
	font-url( 'lato', 'regular' )
	font-weight: normal
	font-style: normal

@font-face
	font-family: 'Lato'
	font-url( 'lato', 'regular-italic' )
	font-weight: normal
	font-style: italic

@font-face
	font-family: 'Lato'
	font-url( 'lato', 'light' )
	font-weight: 300
	font-style: normal

@font-face
	font-family: 'Lato'
	font-url( 'lato', 'bold' )
	font-weight: 700
	font-style: normal

@font-face
	font-family: 'Lato'
	font-url( 'lato', 'bold-italic' )
	font-weight: 700
	font-style: italic

